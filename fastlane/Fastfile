default_platform(:ios)

platform :ios do
  desc "Run Unit and UI Tests"
  lane :tests do
    scan(
      scheme: "sport-shooting", # Aseg√∫rate de que el esquema existe en Xcode
      clean: true,
      devices: ["iPhone 15"], # Puedes cambiarlo por otro simulador disponible
      fail_build: true
    )
  end
end